.typeahead
  position absolute
  z-index 20
  top 5px
  left 5px

  input
    border-radius 3px
    outline none
    border 2px solid $border-color
    padding 3px 6px
    font-size 14px
    line-height 1
    background #ccc

    &::placeholder
      font-size 12px
    
  .typeahead__input-wrapper
    position relative
    display inline-block
    
  .typeahead__suggestions
    position absolute
    top 28px
    width 100%
    left 0
    background #fff
    border 1px solid $border-color
    z-index 51
    padding 8px
    box-sizing border-box
    
.temtem-display-plate
  display flex
  flex-direction row
  border-radius 5px
  cursor pointer
  padding 3px 0
  margin-bottom 5px
  
  &:last-child
    margin-bottom 0
  
  &:hover,
  &--is-selected
    background #ccc
  
  &__portrait-wrapper
    width 50px
    height 50px
    background-image url('../temtem-portrait-background.png')
    background-repeat no-repeat
    background-position center center
    background-size contain
    display flex
    align-items center
    justify-content center
    
  &__portrait
    width 90%
    height 90%
    clip-path polygon(51% 5%,88% 28%,89% 73%,50% 92%,14% 72%,12% 29%)
    
  &__name
    font-size 16px
    font-weight bold
    margin-top .25em
    margin-bottom .25em
    
  &__type
    border-radius 3px
    padding 2px 4px
    line-height 1
    margin-right 5px