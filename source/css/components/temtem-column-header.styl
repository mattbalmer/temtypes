.temtem-column-header
  display flex
  flex-direction row

  &__portrait-wrapper
    width 50px
    height 50px
    background-image url('../temtem-portrait-background.png')
    background-repeat no-repeat
    background-position center center
    background-size contain
    display flex
    align-items center
    justify-content center
    cursor pointer

  &__portrait
    width 90%
    height 90%
    clip-path polygon(51% 5%,88% 28%,89% 73%,50% 92%,14% 72%,12% 29%)
