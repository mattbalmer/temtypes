{
    "compilerOptions": {
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "target": "es6",
        "baseUrl": "./source/js",
        "module": "commonjs",
        "jsx": "react",
        "paths": {
            "@env/*": ["../../lib/@env/*"],
            "@lib/*": ["../../lib/@lib/*"],
            "@client/*": ["./*"]
        }
    },
    "include": [
        "./source/**/*",
        "./lib/**/*"
    ]
}